<div class="panel panel-primary" style="padding-top:70px">
                    <div class="panel-body">
        <b>عنوان: </b><%= @confarticle.title%><br>
        <b>موضوع: </b><%= @confarticle.fa_field%><br>
  <b>چکیده: </b><%= @confarticle.abstract%><br>
        <b>امتیاز خبرگی: </b>
        <% if @confarticle.expert_score.blank? %>
        [امتیازی وارد نشده است.]
        <br>
        <% else %>
                <%= @confarticle.expert_score%><br>
        <% end %>



        <span style="float:left">


                <%= form_for(@confarticle) do |f| %>
                        <span class="field">امتیاز خبرگی
                                <%= f.select :expert_score  ,(0..5),:class => "form-control" ,:onchange=>"this.form.submit()"%>
                        </span>
                        <span class="actions">
                                <%= f.submit "ثبت", :class => "btn btn-xs", :style =>"background-color:#EBEBE0;color:black;border:solid 1px white" %>
                        </span>
                <% end %>


        </span>


  <i class="icon-file" ></i> <%= link_to "دریافت فایل", @confarticle.attachment.url%><br>
                                </div>
                  </div>

