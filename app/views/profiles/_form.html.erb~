<%= form_for @profile, :html => { :multipart => true }  do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
   نام:<br>
    <%= f.text_field :profile_name %>
  </div>
  
  <div class="field">
   رشته:<br>
    <%= f.text_field :field %>
  </div>


  <div class="field">
   گرایش:<br>
    <%= f.text_field :sub_field %>
  </div>

  <div class="field">
   مقطع تحصیلی:<br>
    <%= f.text_field :level_of_education%>
  </div>
  

  <div class="field">
تصویر پروفایل:<br>
<%= f.file_field :avatar %>


  <div class="actions">  
	<div class="control-group">
	   <label class="control-label" for="signin"></label>
		  <div class="controls">
			  <div><%= f.submit "ذخیره تغییرات", :class => "btn btn-primary", :id =>"signin" %></div>  
		  </div>
	</div>
  </div>
  </div>	
<% end %>



