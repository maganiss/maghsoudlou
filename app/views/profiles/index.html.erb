<div class="panel panel-default">
	<div class="panel-heading"><h4>لیست پروفایل ها</h4></div>
	<div class="panel-body">


<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>ش کاربر</th>
      <th>نام</th>
      <th>ایمیل</th>
      <th>مقطع</th>
      <th>رشته</th>

      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
      	<td><%= profile.user_id %></td>
        <td><%= profile.profile_name %></td>
        <td><% if !User.find_by_id(profile.user_id).blank? %><%= User.find_by_id(profile.user_id).email %><%else%>NULL<%end%></td>
        <td><%= profile.level_of_education %></td>
        <td><%= profile.field %></td>

        <td><%= link_to 'Show', profile %> | <%= link_to 'Edit', edit_profile_path(profile) %> | <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>

	</div>
</div>
