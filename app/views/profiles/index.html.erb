<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Profile name</th>
      <th>Profile Gradstat</th>
      <th>Profile birth date</th>
      <th>Profile gender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
      <td><%= profile.id %></td>
        <td><%= profile.user_id %></td>
        <td><%= profile.profile_name %></td>
        <td><%= profile.profile_gradstat %></td>
        <td><%= profile.profile_birth_date %></td>
        <td><%= profile.profile_gender %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

