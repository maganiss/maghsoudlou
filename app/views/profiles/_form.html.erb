<%= form_for @profile, :html => { :multipart => true }  do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
   نام:<br>
    <%= f.text_field :profile_name %>
  </div>

  <div class="field">
تاریخ تولد:<br>
    <%= f.date_select :profile_birth_date,:as => :date, :start_year => 1900, :end_year => Date.today.year - 10, :order => [:year, :month,:day], :required =>true %>
  </div>
  <div class="field">
جنسیت:<br>
    <%= f.select :profile_gender, options_for_select([["زن","0"],  ["مرد","1"] ]) %>
  </div>


  <div class="field">
    وضعیت تحصیلی:<br>
    <%= f.text_field :profile_gradstat %>
  </div>


  <div class="field">
تصویر پروفایل:<br>
<%= f.file_field :avatar %>


  <div class="actions">  
	<div class="control-group">
	   <label class="control-label" for="signin"></label>
		  <div class="controls">
			  <div><%= f.submit "ذخیره تغییرات", :class => "btn btn-primary", :id =>"signin" %></div>  
		  </div>
	</div>
  </div>
  </div>	
<% end %>



